@model IEnumerable<CumulativePart1.Models.Teacher>
@{
    ViewBag.Title = "List";
}
<div id="containerlist">
    <nav>
        <a class="navlink" href="/Teacher/New/"> Add New Teacher</a>
        <a class="navlink" href="/Teacher/AjaxNew"> Add New Teacher With AJAX</a>
    </nav>
    <h2>List of Teachers</h2>
    <form action="/Teacher/List" method="GET">
        <input type="text" name="Searchkey"/>
        <input type="submit" value="Search" />
    </form>

    @foreach(var teacher in Model)
            {
                <div class="listitem row">
                    <div class="col-md-12"><a href="/Teacher/Show/@teacher.TeacherId">@teacher.TeacherFname @teacher.TeacherLname</a></div>
                </div>
            }
</div>

