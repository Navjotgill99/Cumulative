
@{
    ViewBag.Title = "AjaxNew";
}

<div id="containershow">
    <nav>
        <a class="navlink" href="/Teacher/list">Back To Teachers</a>
    </nav>
    <h2>New Teacher with Ajax</h2>
    @{ 
        /*Ajax Request to add Teacher*/
    }
    <form method="POST" action="/Teacher/Create" name="form_create">
        <div class="form-row">
            <label for="TeacherFname">First name:</label>
            <input type="text" id="TeacherFname" name="TeacherFname" />
        </div>
        <div class="form-row">
            <label for="TeacherLname">Last name:</label>
            <input type="text" id="TeacherLname" name="TeacherLname" />
        </div>
        <div class="form-row">
            <label for="EmployeeNum">Employee Number:</label>
            <input type="text" id="EmployeeNum" name="EmployeeNum" />
        </div>
        <div class="form-row">
            <label for="HireDate">Hire Date:</label>
            <input type="date" id="HireDate" name="HireDate" />
        </div>
        <div class="form-row">
            <label for="TeacherSalary">Salary:</label>
            <input type="number" step=".01" id="TeacherSalary" name="TeacherSalary" />
        </div>

        <button class="button" onclick="AddTeacher();">Add Teacher</button>
        <div id="msg"></div>
        </form>
</div>

